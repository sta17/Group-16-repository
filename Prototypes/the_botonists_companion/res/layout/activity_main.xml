<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.the_botonists_companion.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userdetails"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/userdetails"
        android:layout_marginTop="156dp"
        android:text="This is Activity 1"
        android:textColor="#000000" />

    <Button
        android:id="@+id/userdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button03"
        android:layout_alignLeft="@+id/Button03"
        android:layout_alignRight="@+id/Button03"
        android:layout_marginBottom="51dp"
        android:text="User Details" />

    <TextView
        android:id="@+id/nametargetfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Name: " />

    <TextView
        android:id="@+id/phonetargetfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailtargetfield"
        android:layout_below="@+id/nametargetfield"
        android:layout_marginTop="14dp"
        android:text="Phone: " />

    <TextView
        android:id="@+id/emailtargetfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/nametargetfield"
        android:layout_below="@+id/phonetargetfield"
        android:layout_marginTop="18dp"
        android:text="Email: " />

    <Button
        android:id="@+id/Button03"
        android:layout_width="250px"
        android:layout_height="55px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:text="Next"
        android:textSize="18px" />

    <TextView
        android:id="@+id/commenttargetfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nametargetfield"
        android:layout_toLeftOf="@+id/textView1"
        android:text="Com: " />

    <TextView
        android:id="@+id/latitudetargetfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phonetargetfield"
        android:layout_alignBottom="@+id/phonetargetfield"
        android:layout_alignLeft="@+id/commenttargetfield"
        android:text="Lat: " />

    <Button
        android:id="@+id/toCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Camera" />

</RelativeLayout>